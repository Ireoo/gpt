{
    "tabWidth": 2,
    "useTabs": false,
    "parser": "babel",
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 120,
    "overrides": [{
            "files": [
                "*.json",
                ".eslintrc",
                ".tslintrc",
                ".prettierrc",
                ".tern-project"
            ],
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        },
        {
            "files": ["*.vue"],
            "options": {
                "parser": "vue",
                "tabWidth": 2
            }
        },
        {
            "files": "*.{css,sass,scss,less}",
            "options": {
                "parser": "css",
                "tabWidth": 4
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "parser": "yaml"
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": "*.svg",
            "options": {
                "parser": "svg"
            }
        },
        {
            "files": "*.ejs",
            "options": {
                "parser": "ejs"
            }
        }
    ]
}